exec_always pkill waybar
# --- Wallpaper ---
exec_always swaybg -i /home/void/Documents/walp.png -m fill

# Catppuccin Mocha window decoration colors
client.focused          #cba6f7 #cba6f7 #1e1e2e #cdd6f4
client.focused_inactive #45475a #45475a #1e1e2e #a6adc8
client.unfocused        #45475a #45475a #1e1e2e #a6adc8
client.urgent           #f38ba8 #f38ba8 #1e1e2e #1e1e2e

# ===========================
#  Aesthetic Tweaks
# ===========================

gaps inner 3
gaps outer 3

# Rounded corners (requires swayfx or a fork that supports it)
corner_radius 10

# Border size
default_border pixel none

exec_always sleep 2 && waybar



# --- Environment ---
set $mod Mod4
set $term kitty
set $menu wofi --show drun

# --- Apps ---
bindsym $mod+Return exec $term
bindsym $mod+a exec $menu
bindsym $mod+q kill
bindsym $mod+b exec "flatpak run com.brave.Browser"
bindsym $mod+s exec "flatpak run com.spotify.Client"



# --- Navigation ---
bindsym $mod+j focus left
bindsym $mod+k focus down
bindsym $mod+i focus up
bindsym $mod+l focus right

bindsym $mod+Shift+j move left
bindsym $mod+Shift+k move down
bindsym $mod+Shift+i move up
bindsym $mod+Shift+l move right

#function keys
# --- Volume Keys with Notifications ---
bindsym XF86AudioRaiseVolume exec pamixer -i 2 && notify-send "Sound level: $(pamixer --get-volume)%"
bindsym XF86AudioLowerVolume exec pamixer -d 2 && notify-send "Sound level: $(pamixer --get-volume)%"
bindsym XF86AudioMute exec pamixer -t && notify-send "Muted: $(pamixer --get-mute)"
#Brightness
bindsym XF86MonBrightnessUp exec light -A 5
bindsym XF86MonBrightnessDown exec light -U 5
bindsym Shift+XF86MonBrightnessUp exec light -A 2
bindsym Shift+XF86MonBrightnessDown exec light -U 2



# --- Workspaces ---
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10
#send window to diffrent workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

# Global defaults
input * {
    natural_scroll true
    repeat_delay 250
    repeat_rate 40
}

# Keyboard layout
input "type:keyboard" {
    xkb_layout fi
}

# Touchpad settings
input "type:touchpad" {
    tap enabled
    natural_scroll enabled
}


bindsym $mod+Shift+c reload
bindsym $mod+Shift+e exec "swaymsg exit"



